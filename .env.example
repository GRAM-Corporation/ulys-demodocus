# GRAM Deployment Processing System - Environment Configuration
# Copy this file to .env and fill in your values

# Data directory for deployments and processing artifacts
GRAM_DATA_DIR=./deployments

# ElevenLabs API key for transcription
# Get one at: https://elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Anthropic API key for semantic analysis
# Get one at: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Transcription provider (elevenlabs, assemblyai, deepgram)
GRAM_TRANSCRIPTION_PROVIDER=elevenlabs

# AssemblyAI API key (if using AssemblyAI)
# ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Deepgram API key (if using Deepgram)
# DEEPGRAM_API_KEY=your_deepgram_api_key_here

# AWS S3 settings for presigned URL transcription
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
GRAM_S3_BUCKET=gram-deployments
