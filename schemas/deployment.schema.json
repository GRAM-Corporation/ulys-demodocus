{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gram.systems/schemas/deployment.json",
  "title": "Deployment",
  "description": "A field deployment session containing multiple video sources",
  "type": "object",
  "required": ["id", "location", "date", "sources", "created_at", "updated_at"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^deploy:\\d{8}_[a-z0-9_]+_\\d{2}$",
      "description": "Deployment identifier: deploy:{YYYYMMDD}_{location}_{sequence}"
    },
    "location": {
      "type": "string",
      "description": "Human-readable location name"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "ISO 8601 date of deployment"
    },
    "canonical_start_time": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Absolute wall-clock time of canonical timeline zero"
    },
    "canonical_end_time": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Absolute wall-clock time of last recorded moment"
    },
    "sources": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Array of source IDs included in this deployment"
    },
    "team_members": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Array of person IDs for team members present"
    },
    "notes": {
      "type": ["string", "null"],
      "description": "Free-form notes about the deployment"
    },
    "status": {
      "type": "string",
      "enum": ["ingesting", "transcribing", "aligning", "analyzing", "complete", "failed"],
      "description": "Current processing status"
    },
    "checkpoint": {
      "type": ["string", "null"],
      "description": "Last completed processing step for resumption"
    },
    "error_message": {
      "type": ["string", "null"],
      "description": "Error message if status is failed"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
